# ============================================
# ENTERPRISE WORKFLOW MANAGEMENT SYSTEM
# Environment Variables Template
# ============================================

# Application
NODE_ENV=development
LOG_LEVEL=debug

# API Gateway
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=0.0.0.0

# Service Ports
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
PERMISSION_SERVICE_PORT=3003
WORKFLOW_DEFINITION_SERVICE_PORT=3004
WORKFLOW_INSTANCE_SERVICE_PORT=3005
TASK_SERVICE_PORT=3006
APPROVAL_SERVICE_PORT=3007
DOCUMENT_SERVICE_PORT=3008
AUDIT_SERVICE_PORT=3009
NOTIFICATION_SERVICE_PORT=3010
REPORTING_SERVICE_PORT=3011

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=workflow_admin
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=workflow_system

# Service-specific database names
AUTH_DB_NAME=auth_db
USER_DB_NAME=user_db
PERMISSION_DB_NAME=permission_db
WORKFLOW_DEFINITION_DB_NAME=workflow_def_db
WORKFLOW_INSTANCE_DB_NAME=workflow_inst_db
TASK_DB_NAME=task_db
APPROVAL_DB_NAME=approval_db
DOCUMENT_DB_NAME=document_db
AUDIT_DB_NAME=audit_db
NOTIFICATION_DB_NAME=notification_db
REPORTING_DB_NAME=reporting_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=workflow-system
KAFKA_GROUP_ID=workflow-consumers

# JWT Configuration
JWT_ACCESS_SECRET=your_very_long_and_secure_access_token_secret_key_here_min_256_bits
JWT_REFRESH_SECRET=your_very_long_and_secure_refresh_token_secret_key_here_min_256_bits
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_ISSUER=workflow-system
JWT_AUDIENCE=workflow-api

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGINS=http://localhost:4200,http://localhost:3000

# Observability
PROMETHEUS_PORT=9090
JAEGER_ENDPOINT=http://localhost:14268/api/traces
OTEL_SERVICE_NAME=workflow-system
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Document Storage (S3 Compatible)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_BUCKET=workflow-documents
S3_REGION=us-east-1

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@workflow-system.com

# External Services (for development)
SERVICE_DISCOVERY_ENABLED=false
VAULT_ENABLED=false
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your_vault_token
