# ============================================
# API Gateway Environment Variables
# ============================================

# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=debug

# JWT
JWT_ACCESS_SECRET=your_jwt_access_secret_here_min_256_bits
JWT_ISSUER=workflow-system
JWT_AUDIENCE=workflow-api

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGINS=http://localhost:4200,http://localhost:3000

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
PERMISSION_SERVICE_URL=http://localhost:3003
WORKFLOW_DEFINITION_SERVICE_URL=http://localhost:3004
WORKFLOW_INSTANCE_SERVICE_URL=http://localhost:3005
TASK_SERVICE_URL=http://localhost:3006
APPROVAL_SERVICE_URL=http://localhost:3007
DOCUMENT_SERVICE_URL=http://localhost:3008
AUDIT_SERVICE_URL=http://localhost:3009
NOTIFICATION_SERVICE_URL=http://localhost:3010
REPORTING_SERVICE_URL=http://localhost:3011

# Circuit Breaker
CIRCUIT_BREAKER_TIMEOUT=3000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Request Timeout
REQUEST_TIMEOUT_MS=30000

# Observability
PROMETHEUS_ENABLED=true
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
