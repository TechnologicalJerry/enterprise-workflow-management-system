# ============================================
# Auth Service Environment Variables
# ============================================

# Application
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
SERVICE_NAME=auth-service
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/workflow_auth?schema=public

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=auth:

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-min-32-chars-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars-long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=workflow-system
JWT_AUDIENCE=workflow-api

# Security Configuration
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true

# Account Lockout
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Token Expiry
PASSWORD_RESET_TOKEN_EXPIRES_HOURS=1
EMAIL_VERIFICATION_TOKEN_EXPIRES_HOURS=24

# Session
SESSION_EXPIRES_HOURS=24
MAX_SESSIONS_PER_USER=5

# Bcrypt
BCRYPT_ROUNDS=12

# Service URLs (for registration and token enrichment)
USER_SERVICE_URL=http://localhost:3002
PERMISSION_SERVICE_URL=http://localhost:3003
